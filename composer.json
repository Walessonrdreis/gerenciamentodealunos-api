{
    "name": "escola/api",
    "description": "API do Sistema de Gerenciamento Escolar",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.10",
        "ramsey/uuid": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
